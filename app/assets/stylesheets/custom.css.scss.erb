/* Containers */

.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.wrapper {
  min-height: 100vh;
  align-items: center;
}

.two_col {
  border: 1px solid blue;
  width: 85%;
  justify-content: space-between;
}

.entry {
  flex-basis: 70%;
  align-self: flex-start;
  border: 1px solid green;
}

.right_sidebar {
  flex-basis: 25%;
  border: 1px solid red;
}

/* Main Header */

.mainHeader {
  width: 95%;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  padding-top: 5px;
  padding-bottom: 5px;
}

.logo {
  font-weight: 200;
  padding: 0px 5px 10px 5px;
}

.logo:active {
  margin-top: 20px;
  margin-bottom: 10px;
}

.logo a:hover,
.logo a:active,
.logo a:visited {
  text-decoration: none;
  color: #000;
  margin-top: 20px;
}

.show_view .article_title {
  display: none;
}

.display_none {
  display: none;
}