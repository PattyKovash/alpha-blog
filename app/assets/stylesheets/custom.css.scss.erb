html {
  box-sizing: border-box;
  font: 62.5% sans-serif;
}

*, *:before, *:after, *:visited, *:active {
  box-sizing: inherit;
  text-decoration: none;
  list-style: none;
  margin: 0;
  padding: 0;
  color: #000;
}

*:hover {
  text-decoration: none;
  color: #000;
}

body {
  background: #fff;
  font-size: 1.6rem;
  letter-spacing: 1px;
}

input,
input:active {
  padding: 10px;
  font-size: 1.4rem;
  box-sizing: border-box;
}

input[type="submit"]:focus {
  outline: none;
}

input[type="text"]:focus,
input[type="textarea"]:focus,
input[type="search"]:focus {
  outline: 2px solid var(--secondary-color);
}

input[type="submit"],
button {
  border-radius: 0px;
  border: 1px solid black;
  padding: 10px 20px;
  font-weight: 100;
  background: var(--default-btn);
  background: var(--default-btn-trns);
}

input[type="submit"]:hover,
button:hover {
  background: #000;
  color: #fff;
}

::-webkit-input-placeholder {
  font-style: italic;
}

:-ms-input-placeholder {
  font-style: italic;
}

::-ms-input-placeholder {
  font-style: italic;
}

:placeholder {
  font-style: italic;
}

