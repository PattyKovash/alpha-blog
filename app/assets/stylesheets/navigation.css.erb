/* Main Nav */

.navMain ul {
  flex-wrap: wrap;
  margin: 0;
  font-weight: 300;
}

.navMain__listItem {
  flex: 1;
  align-items: center;
}

.navMain__listItem a {
  padding: 20px;
  flex: 1;
  color: #000;
}

.navMain__listItem a:hover,
.navMain__listItem a:active {
  border-top: 2px solid #e2be86;
  text-decoration: none;
  padding-top: 18px;
  color: #e2be86;
  font-weight: 300;
}

.navMain .selected {
  color: #e2be86;
  font-weight: 300;
}

