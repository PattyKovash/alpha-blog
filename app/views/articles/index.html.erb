<section class="section article">
  <header class="header">
    <h1 class="header__title">All Articles</h1>
    <%= render 'articles_nav' %>
  </header>
  <table class="table">
    <thead class="table__head">
      <tr class="table__row">
        <th class="table__headData">Title</th>
        <th class="table__headData">Description</th>
        <th class="table__headData">Created On</th>
        <th class="table__headData" colspan=2></th>
      </tr>
    </thead>
    <tbody class="table_body">
      <% if @articles != nil %>
        <% @articles.each do |article| %>
          <tr class="table__row">
            <td class="table_data"><%= link_to article.title, article_path(article) %></td>
            <td class="table_data"><%= article.description %></td>
            <td class="table_data"><%= article.created_at %></td>
            <td class="table_data"><%= link_to "EDIT", edit_article_path(article) %></td>
            <td class="table_data"><%= link_to "SHOW", article_path(article) %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</section>

