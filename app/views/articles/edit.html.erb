<header class="header">
  <h1 class="header__title">Edit Existing Article</h1>
</header>
<main class="main">
  <section class="section main__section">
    <section class="section form__section">
      <% if @article.errors.any? %>
        <section class="section error">
          <h2 class="error__header">The following errors prevented the article from getting created.</h2>
          <ul class="error__list">
            <% @article.errors.full_messages.each do |msg| %>
              <li class="error__listItem"><%= msg %></li>
            <% end %>
          </ul>
        </section>
      <% end %>
      <%= form_for @article, html: { class: "form" } do |f| %>
        <p class="form__field">
          <%= f.label :title, class: "form__field_label" %>
          <%= f.text_field :title, class: "form__field_input_textField" %>
        </p>
        <p class="form__field">
          <%= f.label :description, class: "form__field_label" %>
          <%= f.text_area :description, class: "form__field_input_textField" %>
        </p>
        <p class="form__field">
          <%= f.submit "Update Article", class: "form__field_submit" %>
        </p>
      <% end %>
    </section>
  </section>
</main>