<header class="header">
  <h1 class="header__title">Create an article</h1>
</header>
<main class="main">
  <section class="section main__section">
    <%= form_for @article, html: { class: "form" } do |f| %>
      <p class="form__field">
        <%= f.label :title, class: "form__field_label" %>
        <%= f.text_field :title, class: "form__field_input_text-field" %>
      </p>
      <p class="form__field">
        <%= f.label :description, class: "form__field_label" %>
        <%= f.text_area :description, class: "form__field_input_text-field" %>
      </p>
      <p class="form__field">
        <%= f.submit "Create Article", class: "form__field_submit" %>
      </p>
    <% end %>
  </section>
</main>
